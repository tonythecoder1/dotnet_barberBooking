@model dotidentity.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="mt-4"></div>

<form method="post" asp-action="Login">
    <div class="form-group">
        <input asp-for="UserName" class="form-control" placeholder="Digite seu nome de usuário" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mt-3"></div>

    <div class="form-group">
        <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mt-3"></div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>

<div class="mt-3">
    <a asp-controller="Home" asp-action="ForgotPassword">Esqueci a password</a>
</div>

<div class="mt-2">
    <span>Ainda não tem conta?</span>
    <a asp-controller="Home" asp-action="Register">Registe-se aqui!</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}